{
  "AWSEBDockerrunVersion": 2,
  "containerDefinitions": [
    {
      "name": "backend",
      "image": "ktryber/django-vue-docker-backend",
      "hostname": "api",
      "essential": false,
      "memory": 128,
      "mountPoints": [
        {
          "containerPath": "/app",
          "sourceVolume": "_Backend"
        }
      ]
    },
    {
      "name": "frontend",
      "image": "ktryber/django-vue-docker-frontend",
      "hostname": "client",
      "essential": false,
      "memory": 128
    },
    {
      "name": "nginx",
      "image": "ktryber/django-vue-docker-nginx",
      "hostname": "nginx",
      "memory": 128,
      "essential": true,
      "mountPoints": [
        {
          "containerPath": "/media/",
          "sourceVolume": "_BackendMedia"
        },
        {
          "containerPath": "/staticfiles/",
          "sourceVolume": "_BackendStaticfiles"
        }
      ],
      "portMappings": [
        {
          "containerPort": 80,
          "hostPort": 3050
        }
      ],
      "links": ["frontend", "backend"]
    }
  ],
  "volumes": [
    {
      "host": {
        "sourcePath": "./backend/media/"
      },
      "name": "_BackendMedia"
    },
    {
      "host": {
        "sourcePath": "./backend/staticfiles/"
      },
      "name": "_BackendStaticfiles"
    },
    {
      "host": {
        "sourcePath": "./backend"
      },
      "name": "_Backend"
    }
  ]
}
