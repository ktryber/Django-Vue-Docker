{
  "AWSEBDockerrunVersion": 2,
  "volumes": [
    {
      "name": "staticfiles",
      "host": {
        "sourcePath": "/var/app/current/backend/config/staticfiles"
      }
    },
    {
      "name": "nginx",
      "host": {
        "sourcePath": "/var/app/current/nginx/default.conf"
      }
    }
  ],
  "containerDefinitions": [
    {
      "name": "frontend",
      "image": "ktryber/django-vue-docker-frontend",
      "hostname": "client",
      "essential": false,
      "memory": 128
    },
    {
      "name": "backend",
      "image": "ktryber/django-vue-docker-backend",
      "hostname": "api",
      "essential": false,
      "memory": 128,
      "mountPoints": [
        {
          "sourceVolume": "staticfiles",
          "containerPath": "/var/app/current/backend/config/staticfiles"
        }
      ]
    },
    {
      "name": "nginx",
      "image": "ktryber/django-vue-docker-nginx",
      "hostname": "nginx",
      "essential": true,
      "portMappings": [
        {
          "hostPort": 80,
          "containerPort": 80
        }
      ],
      "mountPoints": [
        {
          "sourceVolume": "staticfiles",
          "containerPath": "/var/app/current/backend/config/staticfiles",
          "readOnly": true
        },
        {
          "name": "nginx",
          "host": {
            "sourcePath": "/var/app/current/nginx/default.conf"
          }
        }
      ],
      "links": ["frontend", "backend"],
      "memory": 128
    }
  ]
}
