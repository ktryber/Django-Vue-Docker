{
  "AWSEBDockerrunVersion": 2,
  "volumes": [
    {
      "name": "nginx-proxy-conf",
      "host": {
        "sourcePath": "/var/app/current/nginx/prod.conf"
      }
    }
  ],
  "containerDefinitions": [
    {
      "name": "frontend",
      "image": "ktryber/django-vue-docker-frontend",
      "hostname": "client",
      "essential": false,
      "memory": 128
    },
    {
      "name": "backend",
      "image": "ktryber/django-vue-docker-backend",
      "hostname": "api",
      "essential": false,
      "memory": 128
    },
    {
      "name": "nginx",
      "image": "ktryber/django-vue-docker-nginx",
      "hostname": "nginx",
      "memory": 128,
      "essential": true,
      "mountPoints": [
        {
          "sourceVolume": "nginx-proxy-conf",
          "containerPath": "/etc/nginx/nginx.conf",
          "readOnly": true
        }
      ],
      "portMappings": [
        {
          "containerPort": 80,
          "hostPort": 80
        }
      ],
      "links": ["frontend", "backend"]
    }
  ]
}
